<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Service.UserAuthentication.UserProfile">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/blue_circle_line"
                    android:padding="@dimen/_2sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="Số điện thoại: "
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_avatar"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:backgroundTint="@color/sky"
                    android:ems="10"
                    android:text="0945257865"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_phone"
                    app:layout_constraintTop_toTopOf="@+id/tv_phone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Email:"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/phone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sky"
                    android:ems="10"
                    android:text="21521019@gm.uit.edu.vn"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_email"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/phone"
                    app:layout_constraintTop_toTopOf="@+id/tv_email"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Tên người dùng:"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/email"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sky"
                    android:ems="10"
                    android:text="Trương Đăng Khôi"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/phone"
                    app:layout_constraintTop_toTopOf="@+id/tv_fullname"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Địa chỉ: :"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/fullname"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sky"
                    android:ems="10"
                    android:text="UIT"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_address"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/phone"
                    app:layout_constraintTop_toTopOf="@+id/tv_address" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Thành phố"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/address"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sky"
                    android:ems="10"
                    android:text="Đồng Nai"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_city"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/phone"
                    app:layout_constraintTop_toTopOf="@+id/tv_city"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Ngày sinh:"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/city"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sky"
                    android:clickable="true"
                    android:ems="10"
                    android:enabled="false"
                    android:text="13/11/2003"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_birthday"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/phone"
                    app:layout_constraintTop_toTopOf="@+id/tv_birthday"
                    tools:ignore="HardcodedText,KeyboardInaccessibleWidget" />

                <TextView
                    android:id="@+id/tvBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:inputType="datetime"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/birthday"
                    app:layout_constraintStart_toStartOf="@+id/birthday"
                    app:layout_constraintTop_toTopOf="@+id/birthday"
                    tools:ignore="TextViewEdits" />

                <TextView
                    android:id="@+id/tv_front_CCCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Mặt trước CCCD:"
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/birthday"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/img_front_CCCD"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_image"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="@+id/birthday"
                    app:layout_constraintStart_toStartOf="@+id/tv_front_CCCD"
                    app:layout_constraintTop_toBottomOf="@+id/tv_front_CCCD" />

                <View
                    android:id="@+id/front_CCCD"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/stroke"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/tv_front_CCCD"
                    app:layout_constraintTop_toBottomOf="@+id/tv_front_CCCD" />

                <TextView
                    android:id="@+id/tv_behind_CCCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Mặt sau CCCD: "
                    android:textColor="@color/sky"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_phone"
                    app:layout_constraintTop_toBottomOf="@+id/img_front_CCCD"
                    tools:ignore="HardcodedText" />

                <View
                    android:id="@+id/view_behind_CCCD"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/stroke"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/tv_behind_CCCD"
                    app:layout_constraintTop_toBottomOf="@+id/tv_behind_CCCD" />

                <ImageView
                    android:id="@+id/img_behind_CCCD"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_image"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="@+id/birthday"
                    app:layout_constraintStart_toStartOf="@+id/tv_behind_CCCD"
                    app:layout_constraintTop_toBottomOf="@+id/tv_behind_CCCD" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:background="@drawable/blue_round_button"
                    android:backgroundTint="@color/sunset"
                    android:text="Chỉnh sửa thông tin"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
                    app:layout_constraintEnd_toEndOf="@id/phone"
                    app:layout_constraintStart_toStartOf="@id/tv_behind_CCCD"
                    app:layout_constraintTop_toBottomOf="@+id/img_behind_CCCD"
                    tools:ignore="HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>