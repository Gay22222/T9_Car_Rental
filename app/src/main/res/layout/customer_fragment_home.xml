<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPages.Customer.CustomerHomeFragment">

    <!-- Header: Status Bar, Location, Avatar -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Status Bar Placeholder -->

        <!-- Location and Avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:text="Đồng Nai, Việt Nam"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:src="@drawable/image1_main"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle_main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_search"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/relay_roboto_flex_regular"
            android:hint="Tìm xe bạn muốn"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="17.51sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <!-- ScrollView for Content -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Brands Section -->
        <LinearLayout
            android:id="@+id/top_brands_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_brands_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:fontWeight="700"
                android:text="Hãng Nổi Bật"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/view_all_brands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:fontWeight="300"
                android:text="Tất cả"
                android:textColor="@color/gray"
                android:textSize="17.51sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/brands_list"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Top Vehicles Section -->
        <TextView
            android:id="@+id/top_vehicles_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/relay_roboto_flex_regular"
            android:fontWeight="700"
            android:text="Xe Nổi Bật"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vehicle_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
</ScrollView>

<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fab_chat"
android:layout_width="56dp"
android:layout_height="56dp"
android:src="@drawable/image_56_ai"
android:contentDescription="Mở khung chat"
android:backgroundTint="@color/input_area_background"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_margin="16dp"
app:fabSize="normal"
app:borderWidth="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>