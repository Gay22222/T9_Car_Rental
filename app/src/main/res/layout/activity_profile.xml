<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Service.UserAuthentication.ProfileManagement">

    <!-- Thanh điều hướng -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bars"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Nút back -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Back"
            android:src="@drawable/vector_update_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/relay_roboto_flex_regular"
            android:lineHeight="24dp"
            android:text="Cập Nhật Thông Tin"
            android:textColor="@color/account_title"
            android:textSize="29.33sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Avatar -->

    <!-- Nút chỉnh sửa avatar -->

    <!-- Email hiển thị -->

    <!-- Divider -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_profile_input_fragment"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bars" />

    <ImageView
        android:id="@+id/edit_avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="238dp"
        android:layout_marginBottom="35dp"
        android:contentDescription="Edit Avatar"
        android:src="@drawable/vector1_update_profile"
        app:layout_constraintBottom_toBottomOf="@+id/email_display"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_profile_input_fragment" />

    <TextView
        android:id="@+id/email_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/relay_roboto_flex_regular"
        android:text="221521019@gm.uit.edu.vn"
        android:textColor="@color/update_profile_email"
        android:textSize="19.88sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_profile_input_fragment"
        app:layout_constraintTop_toBottomOf="@+id/bars" />

    <View
        android:id="@+id/divider"
        android:layout_width="351dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/line_8_update_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_display" />

    <!-- ScrollView cho thông tin -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp">

            <!-- Tên người dùng -->
            <EditText
                android:id="@+id/profile_input_fullname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/field_update_profile"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:hint="Tên người dùng"
                android:paddingHorizontal="16dp"
                android:textColor="@color/account_input_color"
                android:textColorHint="@color/text_input_hint"
                android:textSize="23.35sp"
                tools:ignore="HardcodedText" />

            <!-- Email -->
            <EditText
                android:id="@+id/profile_input_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/field1_update_profile"
                android:enabled="false"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:hint="Email"
                android:paddingHorizontal="16dp"
                android:textColor="@color/account_input_color"
                android:textColorHint="@color/text_input_hint"
                android:textSize="23.35sp"
                tools:ignore="HardcodedText" />

            <!-- Số điện thoại -->
            <EditText
                android:id="@+id/profile_input_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/field2_update_profile"
                android:enabled="false"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:hint="Số điện thoại"
                android:paddingHorizontal="16dp"
                android:textColor="@color/account_input_color"
                android:textColorHint="@color/text_input_hint"
                android:textSize="23.35sp"
                tools:ignore="HardcodedText" />

            <!-- Địa chỉ -->
            <EditText
                android:id="@+id/profile_input_address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/field3_update_profile"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:hint="Địa chỉ"
                android:paddingHorizontal="16dp"
                android:textColor="@color/account_input_color"
                android:textColorHint="@color/text_input_hint"
                android:textSize="23.35sp"
                tools:ignore="HardcodedText" />

            <!-- Thành phố -->
            <EditText
                android:id="@+id/profile_input_city"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/field4_update_profile"
                android:drawableEnd="@drawable/vector2_update_profile"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:hint="Thành phố"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:textColor="@color/account_input_color"
                android:textColorHint="@color/text_input_hint"
                android:textSize="23.35sp"
                tools:ignore="HardcodedText" />

            <!-- Ngày sinh -->
            <Button
                android:id="@+id/profile_input_dateofbirth"
                style="@style/AppButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/field5_update_profile"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:hint="Ngày sinh"
                android:paddingHorizontal="16dp"
                android:textColor="@color/account_input_color"
                android:textColorHint="@color/text_input_hint"
                android:textSize="23.35sp"
                tools:ignore="HardcodedText" />

            <!-- Cập nhật CCCD -->
            <TextView
                android:id="@+id/update_cccd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:fontWeight="700"
                android:padding="12dp"
                android:text="Cập nhật CCCD"
                android:textColor="@color/update_profile_cccd"
                android:textSize="23.35sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <!-- Nút lưu thay đổi -->
            <Button
                android:id="@+id/btn_update"
                style="@style/AppButton"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="103dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_gradient_update_profile"
                android:fontFamily="@font/relay_roboto_flex_regular"
                android:lineHeight="24dp"
                android:text="Lưu thay đổi"
                android:textColor="@color/white"
                android:textSize="20.33sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>